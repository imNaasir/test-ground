{
  "expo": {
    "name": "test-ground",
    "slug": "my-app-tests",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "testground",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mohamud2024.testground",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for face verification",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to select images"
      }
    },
    "android": {
      "permissions": ["CAMERA", "INTERNET"],

      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "windowSoftInputMode": "adjustResize",
      "softwareKeyboardLayoutMode": "resize",
      "package": "com.mohamud2024.testground"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "89c3d386-6008-4d14-ab74-8ec7c7007b71"
      }
    },
    "owner": "nasirbashir"
  }
}
